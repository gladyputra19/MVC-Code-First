    <!--stickey kit -->
    <script src="~/Assets/plugins/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <!--Custom JavaScript -->
    <script src="~/Assets/main/js/custom.min.js"></script>
    <!-- ============================================================== -->
    <!-- This page plugins -->
