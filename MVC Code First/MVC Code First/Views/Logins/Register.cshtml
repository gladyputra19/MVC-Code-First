@model MVC_Code_First.Models.Login
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Logins/_LayoutPageLogin.cshtml";
}


<body>
    <!-- title -->
    <h1>
        Register Forms
    </h1>
    <!-- //title -->
    <!-- content -->
    <div class="container-agille">
        <div class="formBox level-reg">
            <div class="box boxShaddow"></div>
            <div class="box registerBox wthree">
                <span class="reg_bg"></span>
                <h3>Register</h3>
                <form class="form" action="#" method="post">
                    <div class="f_row-2">

                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "Email", @class = "input-field" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="f_row-2 last">

                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @placeholder = "Password", @class = "input-field" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <input class="submit-w3" type="submit" value="Register">
                </form>
            </div>
            <a href="" class="regTag icon-add">
                <i class="fa fa-repeat" aria-hidden="true"></i>

            </a>
        </div>
    </div>
    <!-- //content -->
    <!-- copyright -->
    <div class="footer-w3ls">
        <h2>
            &copy; 2018 Validate Login & Register Forms. All rights reserved | Design by
            <a href="http://w3layouts.com">W3layouts</a>
        </h2>
    </div>
    <!-- //copyright -->
    <!-- js files -->
    <!-- Jquery -->
    <script src="js/jquery-2.2.3.min.js"></script>
    <!-- //Jquery -->
    <!-- input fields js -->
    <script src="js/input-field.js"></script>
    <!-- //input fields js -->
    <script src="~/js/scrolling-nav.js"></script>
